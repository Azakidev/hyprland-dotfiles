{
    "layer": "top",
    "position": "top",

    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["custom/ddcutil-brightness", "memory", "idle_inhibitor", /*"custom/swaylock",*/ "custom/gammastep", "custom/media", "tray", "pulseaudio", "custom/notifications", "custom/sysmenu"],

    // Modules configuration
    "hyprland/workspaces": {
        "all-outputs": true,
        "format": "{name}",
        "on-click": "activate",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-scroll-up": "hyprctl dispatch workspace e-1"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "timezone": "Europe/Madrid",
        "interval": 60,
        "format": "{:%I:%M}",
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d/%m/%Y}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon}ó°‚¯ {volume}% {format_source}",
        "format-bluetooth-muted": "ó°–ó°‚¯ {volume}% {format_source}",
        "format-muted": "ğŸ”‡ {volume}% {format_source}",
        "format-source": "ğŸ™ï¸ {volume}%",
        "format-source-muted": "ğŸ¤ {volume}%",
        "format-icons": {
          "headphone": "ğŸ§",
          "hands-free": "ï–",
          "headset": "ó°‹‹",
          "phone": "ğŸ“±",
          "portable": "ï‚•",
          "car": "ï†¹",
          "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
        },
        "on-click": "pkill myxer || myxer",
        "tooltip": false
      },
    "custom/media": {
        "format": "{}",
        "interval": 1,
        "exec": "~/.config/waybar/scripts/playerctl.sh",
        "on-click": "playerctl play-pause",
        "return-type": "json",
        "tooltip": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "â˜€ï¸",
            "deactivated": "ğŸŒ™"
        },
        "tooltip": false
    },
    "custom/gammastep": {
        "format": "{}",
        "interval": 5,
        "on-update": "",
        "exec": "sleep 0.05; ~/Documents/hyprland-dotfiles/waybar/scripts/gammastep.sh",
        "on-click": "pkill gammastep || gammastep",
        "tooltip": false
    },
    "bluetooth": {
        "format-disabled": "ó°‚¯ {status}",
        "format-off": "",
        "format-on": "ó°‚¯",
        "format-connected": "ó°‚¯ {device_alias}",
        "format-connected-battery": "ó°‚¯ {device_alias} ó°‚„ {device_battery_percentage}%"
    },
    "custom/sysmenu": {
        "format": "âš™ï¸",
        "on-click": "~/.config/waybar/scripts/sysmenu.sh &",
        "tooltip": false
      },
    "hyprland/window": {
        "format": "{}"
    },
    "memory": {
        "interval": 30,
        "format": "{used:0.1f}G/{total:0.1f}G ğŸ’¾",
        "on-click": "killall gnome-system-monitor || gnome-system-monitor -r"
    },
    "custom/notifications": {
        "format": "ğŸ—¨ï¸",
        "tooltip": false,
        "on-click": "dunstctl history-pop",
        "on-click-right": "dunstctl history-pop & dunstctl history-pop & dunstctl history-pop"
    },
    "custom/swaylock": {
        "format": "ğŸ”’ï¸",
        "on-click": "swaylock",
        "tooltip": false
    },
    "custom/ddcutil-brightness": {
        "format": "{}% â˜€ï¸" ,
        "exec": "ddcutil -d 1 getvcp 10 | awk '{print $9}' | sed 's/.$//'",
        "interval": 1,
        "tooltip": false,
        "on-click": "ddcutil -d 1 setvcp 10 - 15",
        "on-click-right": "ddcutil -d 1 setvcp 10 + 15"
    }
}
