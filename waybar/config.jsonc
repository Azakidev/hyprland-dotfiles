{
    "layer": "top",
    "position": "top",

    // Choose the order of the modules
    "modules-left": ["wlr/workspaces"],
    "modules-center": ["clock"],
    "modules-right": ["idle_inhibitor", "custom/gammastep", "tray", "custom/media", "pulseaudio", "custom/sysmenu"],

    // Modules configuration
    "wlr/workspaces": {
        "all-outputs": true,
        "format": "{name}",
        "on-click": "activate"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "timezone": "Europe/Madrid",
        "interval": 60,
        "format": "{:%I:%M %p}",
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d-%m-%Y}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon}Û∞ÇØ {volume}% {format_source}",
        "format-bluetooth-muted": "Û∞ñÅÛ∞ÇØ {volume}% {format_source}",
        "format-muted": "Û∞ñÅ {volume}% {format_source}",
        "format-source": "Û∞ç¨ {volume}%",
        "format-source-muted": "Û∞ç≠ {volume}%",
        "format-icons": {
          "headphone": "Û∞ãã",
          "hands-free": "Ôñê",
          "headset": "Û∞ãã",
          "phone": "ÔÇï",
          "portable": "ÔÇï",
          "car": "ÔÜπ",
          "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        },
        "on-click": "pavucontrol",
        "tooltip": false
      },
    "custom/media": {
        "format": "{}",
        "interval": 1,
        "exec": "~/.config/waybar/scripts/playerctl.sh",
        "on-click": "playerctl play-pause",
        "return-type": "json",
        "tooltip": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "‚òÄÔ∏è",
            "deactivated": "üåô"
        },
